# ========================================
# ENVIRONMENT VARIABLES FOR PRODUCTION
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MySQL database connection URL
# Format: jdbc:mysql://host:port/database?useSSL=true&serverTimezone=UTC
DB_URL=jdbc:mysql://localhost:3306/testcasedb?useSSL=true&serverTimezone=UTC

# Database username
DB_USERNAME=tcm_user

# Database password (use a strong password!)
DB_PASSWORD=your_strong_password_here

# ========================================
# JWT CONFIGURATION
# ========================================
# JWT secret key (REQUIRED - generate a random 256-bit string)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_random_256_bit_secret_key_here

# JWT expiration time in milliseconds (7 days = 604800000)
# Default: 604800000 (7 days)
JWT_EXPIRATION_MS=604800000

# ========================================
# DEFAULT ADMIN USER CONFIGURATION
# ========================================
# Default admin username
ADMIN_USERNAME=admin

# Default admin password (use a strong password!)
ADMIN_PASSWORD=your_strong_admin_password_here

# Default admin email
ADMIN_EMAIL=admin@yourcompany.com

# ========================================
# FRONTEND URL CONFIGURATION
# ========================================
# Frontend URL (for invitations, callbacks, etc.)
FRONTEND_URL=https://your-domain.com

# ========================================
# OPTIONAL CONFIGURATION
# ========================================
# Show SQL queries in logs (true/false) - Set to false in production
SHOW_SQL=false

# Format SQL queries in logs (true/false) - Set to false in production
FORMAT_SQL=false

# ========================================
# GENERATING SECURE VALUES
# ========================================
# Generate JWT secret:
#   openssl rand -base64 32
#
# Generate database password:
#   openssl rand -base64 24
#
# Generate admin password:
#   openssl rand -base64 24

